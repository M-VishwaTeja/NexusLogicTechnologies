<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Doctor Servlet -->
    <servlet>
        <servlet-name>DoctorServlet</servlet-name>
        <servlet-class>com.hospital.servlet.DoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorServlet</servlet-name>
        <url-pattern>/DoctorServlet</url-pattern>
    </servlet-mapping>

    <!-- Patient Servlet -->
    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>com.hospital.servlet.PatientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/PatientServlet</url-pattern>
    </servlet-mapping>

    <!-- Appointment Servlet -->
    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>com.hospital.servlet.AppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/AppointmentServlet</url-pattern>
    </servlet-mapping>

    <!-- Pharmacy Servlet (Optional) -->
    <servlet>
        <servlet-name>PharmacyServlet</servlet-name>
        <servlet-class>com.hospital.servlet.PharmacyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PharmacyServlet</servlet-name>
        <url-pattern>/PharmacyServlet</url-pattern>
    </servlet-mapping>

</web-app>
